<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.fitnesstrackergp_gui.ViewHistoryController"
            prefHeight="400.0" prefWidth="500.0">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Username:"/>
        <TextField fx:id="usernameField" layoutX="110.0" layoutY="16.0" prefWidth="200.0"/>

        <Button fx:id="profileHistoryBtn" layoutX="30.0" layoutY="60.0" prefWidth="140.0"
                text="View Profile History" onAction="#handleProfileHistory"/>
        <Button fx:id="goalHistoryBtn" layoutX="180.0" layoutY="60.0" prefWidth="140.0"
                text="View Goals History" onAction="#handleGoalHistory"/>
        <Button fx:id="mealHistoryBtn" layoutX="330.0" layoutY="60.0" prefWidth="140.0"
                text="View Meal History" onAction="#handleMealHistory"/>

        <TextArea fx:id="outputArea" layoutX="30.0" layoutY="110.0" prefWidth="440.0" prefHeight="260.0"
                  wrapText="true" editable="false"/>
    </children>
</AnchorPane>
